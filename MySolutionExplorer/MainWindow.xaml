<Window x:Class="MySolutionExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySolutionExplorer"
        mc:Ignorable="d"
        Title="MySolutionExplorer" 
		Height="350" MinHeight="350"
		Width="525" MinWidth="250"
		Closing="Window_Closing"
		>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="20"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="100"/>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="150"/>
		</Grid.ColumnDefinitions>

		<Menu Grid.ColumnSpan="3" IsMainMenu="True">
			<MenuItem Header="Файл">
				<MenuItem Header="Создать" 
					Click="CreateMenuItem_Click"></MenuItem>
				<MenuItem Header="Открыть"
					Click="openbutton_Click"></MenuItem>
				<MenuItem Header="Сохранить"
					Click="saveButton_Click"></MenuItem>
				<MenuItem Header="Закрыть"
					Click="closeButton_Click"></MenuItem>
				<MenuItem Header="Импорт"
					Click="importButton_Click"></MenuItem>
				<MenuItem Header="Синхронизация"
					Click="syncButton_Click"></MenuItem>
				<Separator></Separator>
				<MenuItem Header="Выход" 
					Click="ExitMenuItem_Click"></MenuItem>
			</MenuItem>
			<MenuItem Header="Проект">
				<MenuItem Header="Создать" 
					Click="CreateProjMenuItem_Click"></MenuItem>
			</MenuItem>
		</Menu>

		<ListView 
			Name="mainTable"
			Margin="10" Grid.Row="1"
			MouseLeftButtonUp="mainTable_MouseLeftButtonUp"
			SelectionChanged="mainTable_SelectionChanged"
			SelectionMode="Single">
			<ListView.ContextMenu>
				<ContextMenu>
					<MenuItem Header="Удалить" Click="DeleteMenuItem_Click"/>
					<MenuItem Header="Исключить" Click="ExludeMenuItem_Click"/>
				</ContextMenu>
			</ListView.ContextMenu>
			<ListView.View>
				<GridView>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=Site}"
						Width="70">
						<GridViewColumn.Header>
							<GridViewColumnHeader 
								Tag="Site" 
								Click="GridViewColumnHeader_Click">Сайт</GridViewColumnHeader>
						</GridViewColumn.Header>
					</GridViewColumn>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=Number}" 
						Width="50">
						<GridViewColumn.Header>
							<GridViewColumnHeader 
								Tag="Number" 
								Click="GridViewColumnHeader_Click">Номер</GridViewColumnHeader>
						</GridViewColumn.Header>
					</GridViewColumn>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=TaskName}" 
						Width="150">
						<GridViewColumn.Header>
							<GridViewColumnHeader 
								Tag="TaskName" 
								Click="GridViewColumnHeader_Click">Название</GridViewColumnHeader>
						</GridViewColumn.Header>
					</GridViewColumn>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=Lang}"  
						Width="50">
						<GridViewColumn.Header>
							<GridViewColumnHeader 
								Tag="Lang" 
								Click="GridViewColumnHeader_Click">Язык</GridViewColumnHeader>
						</GridViewColumn.Header>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
		<GridSplitter Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Center" Width="4"/>
		<StackPanel Grid.Row="1" Grid.Column="2">
			<Label Content="Label"/>
			<TextBox />
		</StackPanel>
	</Grid>
</Window>
