<Window x:Class="MySolutionExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySolutionExplorer"
        mc:Ignorable="d"
        Title="MySolutionExplorer" 
		Height="350" 
		Width="525"
		MinHeight="350"
		MinWidth="250">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="20"/>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="13*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="375*"/>
			<ColumnDefinition Width="150"/>
		</Grid.ColumnDefinitions>

		<Menu Grid.ColumnSpan="2" IsMainMenu="True">
			<MenuItem Header="Файл">
				<MenuItem Header="Создать" Click="CreateMenuItem_Click"></MenuItem>
				<MenuItem Header="Открыть"   Click="openbutton_Click"></MenuItem>
				<MenuItem Header="Сохранить" Click="saveButton_Click"></MenuItem>
				<MenuItem Header="Закрыть" Click="closeButton_Click"></MenuItem>
				<Separator></Separator>
				<MenuItem Header="Выход" Click="ExitMenuItem_Click"></MenuItem>
			</MenuItem>
			<MenuItem Header="Edit">
				<MenuItem Header="Undo"></MenuItem>
				<MenuItem Header="Redo"></MenuItem>
				<Separator></Separator>
				<MenuItem Header="Copy"></MenuItem>
				<MenuItem Header="Paste"></MenuItem>
			</MenuItem>
		</Menu>

		<ListView 
			Name="mainTable"
			Margin="20,5,0,10" Grid.RowSpan="2" Grid.Row="1">
			<ListView.View>
				<GridView>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=Site}"
						Width="70">Сайт</GridViewColumn>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=Number}" 
						Width="50">Номер</GridViewColumn>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=TaskName}" 
						Width="150">Название</GridViewColumn>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=Lang}"  
						Width="50">Язык</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>

		<TextBox x:Name="numberText" Margin="12,8,10,0" TextWrapping="Wrap" Text="25" Grid.Column="1" Height="23" VerticalAlignment="Top" Grid.Row="1"/>
		<TextBox x:Name="siteText" Margin="12,36,10,0" TextWrapping="Wrap" Text="acmp" Grid.Column="1" Height="23" VerticalAlignment="Top" Grid.Row="1"/>
		<TextBox x:Name="nameText" Margin="12,64,10,0" TextWrapping="Wrap" Text="Больше-меньше" Grid.Column="1" Height="23" VerticalAlignment="Top" Grid.Row="1"/>
		<ComboBox Name="langList" Margin="12,92,10,0" Grid.Column="1" Height="23" VerticalAlignment="Top" Grid.Row="1">
			<TextBlock>cpp</TextBlock>
			<TextBlock>cs</TextBlock>
		</ComboBox>

		<Button x:Name="createButton" Content="Создать" Margin="35,5,35,0" VerticalAlignment="Top" Click="createButton_Click" Grid.Column="1" Grid.Row="2" Height="20"/>
		<Button x:Name="showButton" Content="Обзор..." Margin="35,30,35,0" VerticalAlignment="Top" Click="showButton_Click" Grid.Column="1" Grid.Row="2" Height="20"/>
		<Button x:Name="loadButton" Content="Загрузить" HorizontalAlignment="Left" Margin="35,55,0,0" VerticalAlignment="Top" Width="80" Click="loadButton_Click" Grid.Column="1" Grid.Row="2" Height="20"/>
		<Button x:Name="saveButton" Content="Сохранить" HorizontalAlignment="Left" Margin="35,80,0,0" VerticalAlignment="Top" Width="80" Click="saveButton_Click" Grid.Column="1" Grid.Row="2" Height="20"/>
		<Button x:Name="closeButton" Content="Закрыть" HorizontalAlignment="Left" Margin="35,105,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Click="closeButton_Click" Grid.Row="2" Height="20"/>
		<Button x:Name="importButton" Content="Импорт" HorizontalAlignment="Left" Margin="35,130,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1"  Grid.Row="2" Height="20" Click="importButton_Click"/>

	</Grid>
</Window>
