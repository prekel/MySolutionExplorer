<Window x:Class="MySolutionExplorer.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySolutionExplorer"
        mc:Ignorable="d"
        Title="Создать проект" 
		Height="200" MinHeight="200"
		Width="300" MinWidth="100">
	<Grid Background="WhiteSmoke">
		<TextBox x:Name="numberText" Margin="10,8,10,0" TextWrapping="Wrap" Text="25" Grid.Column="1" Height="23" VerticalAlignment="Top" Grid.Row="1"/>
		<TextBox x:Name="siteText" Margin="10,36,10,0" TextWrapping="Wrap" Text="acmp" Grid.Column="1" Height="23" VerticalAlignment="Top" Grid.Row="1"/>
		<TextBox x:Name="nameText" Margin="10,64,10,0" TextWrapping="Wrap" Text="Больше-меньше" Grid.Column="1" Height="23" VerticalAlignment="Top" Grid.Row="1"/>
		<ComboBox Name="langList" Margin="10,92,10,0" Grid.Column="1" Height="23" VerticalAlignment="Top" Grid.Row="1">
			<TextBlock>cpp</TextBlock>
		    <TextBlock>cs</TextBlock>
		    <TextBlock>py</TextBlock>
		</ComboBox>
		<Button x:Name="createbutton" Content="Создать" Margin="110,135,110,0" VerticalAlignment="Top" Click="createbutton_Click"/>
	</Grid>
</Window>
